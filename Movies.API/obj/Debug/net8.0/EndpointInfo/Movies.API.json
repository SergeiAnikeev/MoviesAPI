{
  "openapi": "3.0.1",
  "info": {
    "title": "Movies.API",
    "version": "1.0"
  },
  "paths": {
    "/api/movies": {
      "post": {
        "tags": [
          "Movies"
        ],
        "requestBody": {
          "content": {
